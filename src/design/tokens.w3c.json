{
  "$schema": "https://design-tokens.github.io/community-group/format/schemas/design-tokens.schema.json",
  "$version": "2025.10",
  "$description": "Design tokens for Antony Blog - Professional voice actor portfolio",
  "$extensions": {
    "com.anthropic.design-system": {
      "generatedFrom": "src/design/tokens.ts",
      "toolVersion": "1.0.0",
      "lastUpdated": "2025-12-15"
    }
  },
  "color": {
    "$type": "color",
    "ink": {
      "$description": "Text colors - dark to light spectrum",
      "black": {
        "$value": "#111111",
        "$description": "Darkest ink for high emphasis"
      },
      "default": {
        "$value": "#1A1A1A",
        "$description": "Primary text color"
      },
      "secondary": {
        "$value": "#444444",
        "$description": "Secondary text, lower emphasis"
      },
      "muted": {
        "$value": "#666666",
        "$description": "Muted text, placeholder text"
      }
    },
    "paper": {
      "$description": "Background colors - warm, paper-like tones",
      "default": {
        "$value": "#F3F2EE",
        "$description": "Primary background color"
      },
      "white": {
        "$value": "#FEFDFB",
        "$description": "Secondary background, cards"
      }
    },
    "accent": {
      "$description": "Brand colors - sage green palette",
      "default": {
        "$value": "#2C4435",
        "$description": "Primary brand color (sage green)",
        "$extensions": {
          "com.anthropic.design-system": {
            "wcagContrast": {
              "onWhite": "10.40",
              "onPaper": "9.44",
              "level": "AAA"
            }
          }
        }
      },
      "hover": {
        "$value": "#1F3327",
        "$description": "Darker sage for hover states"
      },
      "light": {
        "$value": "#4E6E5A",
        "$description": "Lighter sage for subtle accents"
      }
    },
    "warm": {
      "default": {
        "$value": "#8B7355",
        "$description": "Warm brown - decorative only (borders, backgrounds)"
      }
    },
    "hairline": {
      "default": {
        "$value": "#CCCCCC",
        "$description": "Border color"
      }
    }
  },
  "spacing": {
    "$type": "dimension",
    "$description": "Spacing scale based on 4px/8px grid",
    "0": { "$value": "0px" },
    "0.5": { "$value": "2px" },
    "1": { "$value": "4px" },
    "1.5": { "$value": "6px" },
    "2": { "$value": "8px" },
    "2.5": { "$value": "10px" },
    "3": { "$value": "12px" },
    "4": { "$value": "16px" },
    "5": { "$value": "20px" },
    "6": { "$value": "24px" },
    "8": { "$value": "32px" },
    "10": { "$value": "40px" },
    "12": { "$value": "48px" },
    "16": { "$value": "64px" },
    "20": { "$value": "80px" },
    "24": { "$value": "96px" },
    "32": { "$value": "128px" }
  },
  "fontFamily": {
    "$type": "fontFamily",
    "serif": {
      "$value": ["Literata", "Charter", "Georgia", "Times New Roman", "serif"],
      "$description": "Serif font stack for body text"
    },
    "sans": {
      "$value": ["Manrope", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Helvetica Neue", "Arial", "sans-serif"],
      "$description": "Sans-serif font stack for UI elements"
    }
  },
  "fontSize": {
    "$type": "dimension",
    "xs": { "$value": "12px" },
    "sm": { "$value": "14px" },
    "base": { "$value": "15px" },
    "md": { "$value": "17px" },
    "lg": { "$value": "18px" },
    "xl": { "$value": "21px" },
    "2xl": { "$value": "24px" },
    "3xl": { "$value": "30px" },
    "4xl": { "$value": "36px" },
    "5xl": { "$value": "48px" }
  },
  "fontWeight": {
    "$type": "fontWeight",
    "normal": { "$value": 400 },
    "medium": { "$value": 500 },
    "semibold": { "$value": 600 },
    "bold": { "$value": 700 }
  },
  "borderRadius": {
    "$type": "dimension",
    "none": { "$value": "0px" },
    "sm": { "$value": "4px" },
    "default": { "$value": "6px" },
    "md": { "$value": "8px" },
    "lg": { "$value": "12px" },
    "xl": { "$value": "16px" },
    "full": { "$value": "9999px" }
  },
  "shadow": {
    "$type": "shadow",
    "none": {
      "$value": {
        "offsetX": "0px",
        "offsetY": "0px",
        "blur": "0px",
        "spread": "0px",
        "color": "rgba(0, 0, 0, 0)"
      }
    },
    "sm": {
      "$value": {
        "offsetX": "0px",
        "offsetY": "1px",
        "blur": "2px",
        "spread": "0px",
        "color": "rgba(0, 0, 0, 0.05)"
      }
    },
    "default": {
      "$value": [
        {
          "offsetX": "0px",
          "offsetY": "1px",
          "blur": "3px",
          "spread": "0px",
          "color": "rgba(0, 0, 0, 0.1)"
        },
        {
          "offsetX": "0px",
          "offsetY": "1px",
          "blur": "2px",
          "spread": "-1px",
          "color": "rgba(0, 0, 0, 0.1)"
        }
      ]
    },
    "md": {
      "$value": [
        {
          "offsetX": "0px",
          "offsetY": "4px",
          "blur": "6px",
          "spread": "-1px",
          "color": "rgba(0, 0, 0, 0.1)"
        },
        {
          "offsetX": "0px",
          "offsetY": "2px",
          "blur": "4px",
          "spread": "-2px",
          "color": "rgba(0, 0, 0, 0.1)"
        }
      ]
    }
  },
  "duration": {
    "$type": "duration",
    "$description": "Animation and transition durations",
    "fast": { "$value": "120ms" },
    "normal": { "$value": "200ms" },
    "slow": { "$value": "250ms" },
    "slower": { "$value": "300ms" }
  },
  "opacity": {
    "$type": "number",
    "disabled": { "$value": 0.4 },
    "hover": { "$value": 0.7 },
    "muted": { "$value": 0.5 },
    "subtle": { "$value": 0.02 },
    "placeholder": { "$value": 0.4 }
  },
  "breakpoint": {
    "$type": "dimension",
    "$description": "Responsive breakpoints",
    "xs": { "$value": "400px" },
    "sm": { "$value": "640px" },
    "md": { "$value": "768px" },
    "lg": { "$value": "1024px" },
    "xl": { "$value": "1280px" },
    "2xl": { "$value": "1536px" }
  },
  "accessibility": {
    "$description": "Accessibility-related tokens",
    "touchTarget": {
      "$type": "dimension",
      "min": {
        "$value": "44px",
        "$description": "Minimum touch target size (Apple HIG)"
      },
      "mobile": {
        "$value": "48px",
        "$description": "Recommended mobile touch target"
      }
    },
    "contrast": {
      "$type": "number",
      "minAA": {
        "$value": 4.5,
        "$description": "WCAG AA minimum contrast ratio"
      },
      "minAAA": {
        "$value": 7,
        "$description": "WCAG AAA minimum contrast ratio"
      }
    }
  }
}
