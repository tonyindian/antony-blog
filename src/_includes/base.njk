<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% if title %}{{ title }} | antony alex{% else %}antony alex | Sprecher · Warmer Bariton. Deutsch &amp; Englisch. Zürich{% endif %}</title>
  
  {% if description %}
  <meta name="description" content="{{ description }}">
  {% else %}
  <meta name="description" content="Professioneller Sprecher & Voice Actor mit warmem Bariton. Werbung, Hörbuch, Dokumentation, Synchron. Deutsch, Schweizerdeutsch, Englisch. ► Hörproben!">
  {% endif %}
  
  <!-- Canonical URL -->
  <link rel="canonical" href="{{ site.url }}{{ page.url }}">
  
  <!-- Open Graph -->
  <meta property="og:title" content="{% if title %}{{ title }}{% else %}antony alex | Sprecher · Warmer Bariton. Deutsch &amp; Englisch.{% endif %}">
  <meta property="og:description" content="{% if description %}{{ description }}{% else %}Professioneller Sprecher & Voice Actor mit warmem Bariton. Werbung, Hörbuch, Dokumentation, Synchron. Deutsch, Schweizerdeutsch, Englisch. ► Hörproben!{% endif %}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  <meta property="og:locale" content="de_CH">
  <meta property="og:image" content="{{ site.url }}{{ ogImage }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">

  <!-- Twitter Cards -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{% if title %}{{ title }}{% else %}antony alex | Sprecher · Warmer Bariton. Deutsch &amp; Englisch.{% endif %}">
  <meta name="twitter:description" content="{% if description %}{{ description }}{% else %}Professioneller Sprecher & Voice Actor mit warmem Bariton. Werbung, Hörbuch, Dokumentation, Synchron. Deutsch, Schweizerdeutsch, Englisch. ► Hörproben!{% endif %}">
  <meta name="twitter:image" content="{{ site.url }}{{ ogImage }}">
  
  <!-- JSON-LD Structured Data (SEO & AEO Optimized) -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Person",
    "name": "Antony Alex",
    "jobTitle": ["Voice Actor", "Sprecher", "Voice Over Artist"],
    "description": "Professional voice actor and speaker with warm baritone for commercials, documentaries, and brand stories. German, Swiss German, English.",
    "url": "{{ site.url }}",
    "email": "mail@antony.ch",
    "sameAs": [
      "{{ site.social.instagram }}",
      "{{ site.social.tiktok }}"
    ],
    "knowsLanguage": ["de", "de-CH", "en"],
    "areaServed": [
      {
        "@type": "Country",
        "name": "Switzerland"
      },
      {
        "@type": "Place",
        "name": "Remote/Worldwide"
      }
    ],
    "alumniOf": {
      "@type": "EducationalOrganization",
      "name": "Speech Academy Schweiz"
    },
    "knowsAbout": [
      "Commercial Voice Over",
      "Audiobook Narration",
      "E-Learning",
      "Documentary",
      "IVR",
      "Podcast",
      "Explainer Videos",
      "Dubbing",
      "Animation",
      "Video Games"
    ],
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Zürich",
      "addressCountry": "CH"
    }
  }
  </script>

  <meta name="theme-color" content="#F4EFE6">
  <meta name="mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-capable" content="yes">

  <link rel="manifest" href="/manifest.webmanifest">
  <link rel="icon" href="/assets/icons/aa-icon.svg" type="image/svg+xml">
  <link rel="preload" href="/fonts/literata-v40-latin/literata-v40-latin-regular.woff2" as="font" type="font/woff2" crossorigin="anonymous">
  <link rel="preload" href="/fonts/manrope-v20-latin/manrope-v20-latin-regular.woff2" as="font" type="font/woff2" crossorigin="anonymous">
  
  <link rel="stylesheet" href="/css/style.css">
</head>
{% set bodyClass %}
  {% if page.url == "/" %}
    home
  {% elseif page.url.indexOf("/blog") == 0 %}
    blog-page
  {% elseif page.url.indexOf("/posts/") == 0 %}
    post-page
  {% else %}
    default-page
  {% endif %}
{% endset %}
<body class="{{ bodyClass | trim }}">
  <a href="#main-content" class="skip-link">Zum Inhalt springen</a>
  <header class="site-header" role="banner">
    <div class="header-inner">
      <a href="/" class="logo"{% if page.url == "/" %} aria-current="page"{% endif %}>antony alex</a>

      <!-- Hamburger Menu Button (Mobile Only) -->
      <button class="mobile-menu-toggle"
              type="button"
              aria-label="Menü öffnen"
              aria-expanded="false"
              aria-controls="mobile-nav">
        <span class="hamburger-icon" aria-hidden="true">
          <span class="line"></span>
          <span class="line"></span>
          <span class="line"></span>
        </span>
      </button>

      <nav id="mobile-nav" aria-label="Hauptnavigation">
        <a href="/#hoerbeispiele"{% if page.url == "/" %} aria-current="true"{% endif %}>Hörbeispiele</a>
        <a href="/#about"{% if page.url == "/" %} aria-current="true"{% endif %}>Stimme</a>
        <a href="/about/"{% if page.url.indexOf('/about') == 0 %} aria-current="page"{% endif %}>Über mich</a>
        <a href="/#kontakt"{% if page.url == "/" %} aria-current="true"{% endif %}>Kontakt</a>
      </nav>
    </div>
  </header>
  
  {% if page.url == "/" %}
    <!-- Homepage: No main wrapper -->
    {{ content | safe }}
  {% else %}
    <!-- Blog pages: With main wrapper -->
    <main id="main-content" role="main">
      {{ content | safe }}
    </main>
  {% endif %}
  
  <footer>
    <div class="footer-inner">
      <p>
        © 2025 antony alex ·
        <a href="/impressum/">Impressum</a> ·
        <a href="/datenschutz/">Datenschutz</a>
      </p>
      <div class="social-links">
        <a href="{{ site.social.instagram }}" target="_blank" rel="noopener noreferrer" aria-label="Instagram Profil">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
          </svg>
        </a>
        <a href="{{ site.social.tiktok }}" target="_blank" rel="noopener noreferrer" aria-label="TikTok Profil">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 12a4 4 0 1 0 4 4V4a5 5 0 0 0 5 5"/>
          </svg>
        </a>
      </div>
    </div>
  </footer>

  <script src="/assets/js/sw-register.js" defer></script>
  <script src="/assets/js/mobile-menu.js" defer></script>
  {% if page.url == "/" %}
  <script src="/assets/js/demos.js" defer></script>
  <!-- Tally Form Embed -->
  <script async src="https://tally.so/widgets/embed.js"></script>
  {% endif %}
</body>
</html>
