---
layout: base.njk
---

<article itemscope itemtype="https://schema.org/BlogPosting">
  <header class="article-header">

    <div class="article-meta">
      {% if section %}{{ section }} · {% endif %}
      {{ page.date | dateReadable }} · ~6 Min
    </div>

    <h1 class="article-title" itemprop="headline">{{ title }}</h1>

    <div class="article-contributor">Text: Antony Alex</div>

    {# Lead / Vorspann: zuerst answer, sonst description #}
    {% if answer %}
      <p class="post-lead" itemprop="description">{{ answer }}</p>
    {% elseif description %}
      <p class="post-lead" itemprop="description">{{ description }}</p>
    {% endif %}

    {# Kleine, dezente Updated-Zeile unter dem Lead #}
    {% if updated %}
      <p class="post-updated-small">
        Aktualisiert:
        <time datetime="{{ updated | dateIso }}" itemprop="dateModified">
          {{ updated | dateReadable }}
        </time>
      </p>
    {% endif %}

  </header>

  <div class="post-content" itemprop="articleBody">
    {{ content | safe }}
  </div>

  {% include "faq.njk" %}
</article>

{# JSON-LD Structured Data für LLMs #}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": "{{ title }}",
  "description": "{{ answer or description }}",
  "datePublished": "{{ date | dateIso }}",
  {% if updated %}"dateModified": "{{ updated | dateIso }}",{% endif %}
  "author": {
    "@type": "Person",
    "name": "Antony",
    "url": "https://antony.ch"
  },
  "publisher": {
    "@type": "Person",
    "name": "Antony"
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ page.url | url | absoluteUrl(site.url) }}"
  }
}
</script>
